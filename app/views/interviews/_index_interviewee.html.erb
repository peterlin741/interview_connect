<h3>Enter your available times</h3>
<br /> 


<%= form_for [@interview] do |f| %>

  <%= f.text_field :interviewee_email, :value => current_user.email, :readonly => true %> 
  <br /><br />

  <%= f.datetime_select(:interview_date, prompt: {day: 'Choose day', month: 'Choose month', year: 'Choose year'}, :start_year => 2016, :ampm => true, :minute_step => 15) %>
  <br /><br />


  <p><%= f.submit "Request Interview Time" %></p>

<% end %>


<br /><br />

<h3>Scheduled Interviews</h3>

<ul>
  <% @interviews_scheduled_for_interviewee.each do |interview| %>
    <% info = "Interviewee: " + interview.interviewee_email + ", Time: " + interview.interview_date.to_s %>
    <li><%= info%></li>
  <% end %>
</ul>